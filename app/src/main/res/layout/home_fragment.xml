<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/createapost_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:text="Create a Post"
            android:textColor="@color/blackText"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="60sp"
            android:text="Title"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/postTitle"
            android:layout_width="360sp"
            android:layout_height="35sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="90sp"
            android:background="@drawable/rounded_corner"
            android:hint=" Title"
            android:inputType="text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="135sp"
            android:text="Select Subject"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/chooseSubject"
            android:layout_width="360sp"
            android:layout_height="35sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="160sp"
            android:entries = "@array/SubjectArrary"
            android:background="@drawable/rounded_corner"
            android:theme="@style/spinnerTheme"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="205sp"
            android:text="Location"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/chooseLocation"
            android:layout_width="360sp"
            android:layout_height="35sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="235sp"
            android:background="@drawable/rounded_corner"
            android:hint="Location"
            android:inputType="text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="275sp"
            android:text="Select Level"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/chooseLevel"
            android:layout_width="360sp"
            android:layout_height="35sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="310sp"
            android:entries = "@array/LevelArrary"
            android:background="@drawable/rounded_corner"
            android:theme="@style/spinnerTheme"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="350sp"
            android:text="Description"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/description"
            android:layout_width="360sp"
            android:layout_height="175sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="380sp"
            android:background="@drawable/rounded_corner"
            android:inputType="text"
            />


        <Button
            android:id="@+id/createapostbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="580sp"
            android:text="Post"
            android:textColor="@color/blackText"
            android:backgroundTint="@color/main"


            />












    </RelativeLayout>
</ScrollView>