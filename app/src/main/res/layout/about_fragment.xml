        android:textColor="@color/blackText"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="630sp"
        android:text="Tutors"
        android:textColor="@color/blackText"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="655sp"
        android:text= "You can simply Create a post and wait for parents to reply, or you can view posts made by parents looking for tutors. Once you find a parent you can help, send them a message by searching for them by username. From the chat screen you can call each other or chat further"
        android:textColor="@color/blackText"
        android:textSize="18sp"
        />





</RelativeLayout>
</ScrollView>